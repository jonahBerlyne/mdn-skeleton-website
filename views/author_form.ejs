<!DOCTYPE html>
<html lang="en">
  <head>
  <title>
    <%- title %>
  </title>
  <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
  <div class="container-fluid">
    <div class="row">
    <div class="col-sm-10">
      <%- include('./layout.ejs') %>
      <h1>
      <%- title %>
      </h1>
      <form action="" method="post">
      <div class="form-group">
        <label for="first_name"> First Name: </label>
        <input id="first_name" class="form-control" type="text" placeholder="First name (Christian)" name="first_name"
        required="true" value=<%- undefined===author ? '' : author.first_name %> >
        <label for="family_name"> Family Name: </label>
        <input id="family_name" class="form-control" type="text" placeholder="Family name (Surname)" name="family_name"
        required="true" value=<%- undefined===author ? '' : author.family_name %> >
      </div>
      <div class="form-group">
        <label for="date_of_birth"> Date of birth: </label>
        <input type="date" id="date_of_birth" class="form-control" type="date" name="date_of_birth" value=<%-
        undefined===author ? '' : author.date_of_birth_for_form %> >
        <label for="date_of_death"> Date of Death: </label>
        <input type="date" id="date_of_death" class="form-control" type="date" name="date_of_death" value=<%-
        undefined===author ? '' : author.date_of_death_for_form %> >
      </div>
      <button class="btn btn-primary" type="submit">Submit</button>
      </form>
      <% if (errors) { %>
      <ul>
        <% errors.forEach(error=> { %>
        <li>
          <%- error.msg %>
        </li>
        <% }) %>
      </ul>
      <% } %>
    </div>
    </div>
  </div>
  </body>
</html>